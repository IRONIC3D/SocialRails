<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "well" }) do |f| %>
      <%= devise_error_messages! %>
      <fieldset>
        <legend>Resend confirmation instructions</legend>
        <div class="form-group">
          <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>

        <div><%= f.submit "Resend confirmation instructions", class: "btn btn-success" %></div>
      </fieldset>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
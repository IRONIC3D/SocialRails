<div class="container">
  <% if @friend %>
    <h1><%= @friend.full_name %></h1>

    <p>Do you really want to friend <%= @friend.full_name %></p>

    <%= form_for @user_friendship, method: :post do |f| %>
      <div class="form form-actions">
      <%= f.hidden_field :friend_id, value: @friend %>
        <%= submit_tag "Yes, Add Friend", class: 'btn btn-primary' %>
        <%= link_to "Cencel", profile_path(@friend), class: 'btn btn-warning' %>
      </div>
    <% end %>
  <% end %>
</div>